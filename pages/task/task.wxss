/* pages/task/task.wxss */
.container {
  color: #fff;
  height: 100vh;
  background: green;
  display: flex;
  flex-direction: column;
}
.top {
  height: 70rpx;
  background: #AD00FF;
  display: flex;
  align-items: center;
  justify-content: center;
}
.task-wrap {
  height: 850rpx;
}
.task-item {
  
}
.item-wrap {
  display: flex;
  padding: 10rpx 20rpx;
  align-items: center;
}
.item-name {
  width: 250rpx;
  font-size: 14px;
}
.item-star {
  width: 300rpx;
}
.item-edit {
  width: 120rpx;
  height: 50rpx;
  font-size: 12px;
}
.bg-one {
  background: #3F51B5;
}
.bg-two {
  background: #00AAEE;
}
.bottom {
  height: 330rpx;
  background: #fff;
  padding: 20rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.text-add {
  width: 100%;
  height: 80rpx;
  background: #eee;
  border-radius: 5px;
  font-size: 14px;
  padding: 0 10px;
  color: #333;
  box-sizing: border-box;
}
.star-wrap {
  display: flex;
  justify-content: center;
}
.bt-add {
  background: #259B24;
  width: 100%;
}